{{#each posts}}
<div class="media">
    <a href="/userProfile/{{postUser._id}}">
        <img src="{{postUser.image}}" class="mr-3" width="64px">
    </a>
    <div class="media-body">
        <h5 class="mt-0">{{title}} <i class="fa fa-globe"></i></h5>
        <small class="green">{{getLastMoment date 'hour'}}</small>
        <p>{{body}}</p>
        <img src="{{image}}" class="img-fluid">
        <br>
        <br>
        <h4>
            <a href="/likePost/{{_id}}">
            <i class="fa fa-thumbs-up post-icons">Like</i>
            </a>

            {{#if allowComments}}
            <a href="/fullpost/{{_id}}">
            <i class="fa fa-comments post-icons"> Comment</i>
            </a>
            {{else}}
            <p class="red">Comment is not allowed</p>
            {{/if}}
        </h4>

        <br>
        <a href="/fullPost/{{_id}}">View More</a>
    </div>
</div>
<hr>
{{else}}
<p>No Posts found ...</p>
{{/each}}